{
    "manifest_version": 3,
    "name": "PomoChrome",
    "description": "Pomodoro timer for Chrome",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16": "TomatoTimer.png",
            "48": "TomatoTimer.png",
            "128": "TomatoTimer.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://www.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
